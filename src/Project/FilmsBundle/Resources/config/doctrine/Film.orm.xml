<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Project\FilmsBundle\Entity\FilmRepository" name="Project\FilmsBundle\Entity\Film">
    <id name="titlet" type="string" column="titlet" length="50" >
    </id>
    <field name="title" type="string" column="title" length="50" nullable="true"/>
    <field name="director" type="string" column="director" length="50" nullable="true"/>
    <field name="year" type="integer" column="year" nullable="true"/>
    <field name="description" type="string" column="description" length="255" nullable="true"/>
    <field name="genre" type="string" column="genre" length="50" nullable="true"/>   
    <field name="price" type="float" column="price" precision="8" scale="0" nullable="true"/>
    <field name="actors" type="string" column="actors" length="100" nullable="true"/>
    <field name="topborrowed" type="integer" column="topborrowed" nullable="true"/>

  </entity>
</doctrine-mapping>
