<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Project\FilmsBundle\Entity\ReviewRepository" name="Project\FilmsBundle\Entity\Review">
  	 <indexes>
      <index name="film_id" columns="film_id"/>
    </indexes>
    <id name="reviewId" type="integer" column="reviewId">
      <generator strategy="AUTO"/>
    </id>
    <field name="topreviewed" type="integer" column="topreviewed" nullable="true"/>
    <field name="review" type="string" column="review" length="255" nullable="true"/>
    <field name="client_id" type="integer" column="client_id" nullable="false"/>
    <many-to-one field="film_id" target-entity="Film">
      <join-columns>
        <join-column name="film_id" referenced-column-name="film_id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
